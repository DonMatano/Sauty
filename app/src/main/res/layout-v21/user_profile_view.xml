<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:scrollbars="vertical">
<android.support.constraint.ConstraintLayout
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/profileConstraintLayout"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <Button
            android:id="@+id/followUnfollowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/orangeButton"
            app:layout_constraintBottom_toBottomOf="@+id/userFullProfileImage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/userFullProfileImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/followingTvUserprofile"
            tools:text="Follow"/>

        <TextView
            android:id="@+id/followingTvUserprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="21dp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="@+id/followerstvuserprofile"
            app:layout_constraintRight_toRightOf="@+id/followerstvuserprofile"
            app:layout_constraintTop_toBottomOf="@+id/followerstvuserprofile"
            tools:text="following 22"/>

        <TextView
            android:id="@+id/followerstvuserprofile"
            android:layout_width="98dp"
            android:layout_height="15dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="22dp"
            android:maxHeight="300dp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/userFullProfileImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userNametvuserprofileName"
            tools:text="55 followers"/>

        <TextView
            android:id="@+id/userStatusTvuserprofile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userFullProfileImage"
            tools:text="Am Great"/>

        <TextView
            android:id="@+id/userNametvuserprofileName"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/userFullProfileImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/userFullProfileImage"
            tools:text="Matano"/>

        <ImageView
            android:id="@+id/userFullProfileImage"
            android:layout_width="184dp"
            android:layout_height="159dp"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/user_profile_image"
            android:maxHeight="256dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_profile_view_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:maxHeight="300dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileConstraintLayout"
        tools:listitem="@layout/post_feed_view"/>

</android.support.constraint.ConstraintLayout>
    </ScrollView>
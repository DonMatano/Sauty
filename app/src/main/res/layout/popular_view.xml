<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/popularProfilePicImageV"
        android:layout_width="95dp"
        android:layout_height="85dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/profile_image_contdesc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"/>

    <TextView
        android:id="@+id/userNamePopularTextV"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/popularProfilePicImageV"
        tools:text="Matano"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/popularFollowButton"/>

    <Button
        android:id="@+id/popularFollowButton"
        android:layout_width="67dp"
        android:layout_height="31dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="37dp"
        android:background="@color/orangeButton"
        app:layout_constraintBottom_toBottomOf="@+id/popularProfilePicImageV"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintLeft_toRightOf="@+id/popularProfilePicImageV"
        app:layout_constraintRight_toRightOf="@+id/userNamePopularTextV"
        tools:text="Follow"
        />

</android.support.constraint.ConstraintLayout>